# Discord Bot Configuration
BOT_TOKEN=your_discord_bot_token_here
BOT_PREFIX=!
BOT_DESCRIPTION=A multi-purpose Discord bot with modular features

# Bot Extensions (Cogs)
# Comma-separated list of enabled extensions
EXTENSIONS_ENABLED=nickname,admin,utility,moderation,fun,help

# Groq LLM Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-70b-8192
GROQ_API_BASE=https://api.groq.com/openai/v1

# Translation Settings
TRANSLATION_CACHE_SIZE=100
TRANSLATION_COOLDOWN_SECONDS=1.0
MAX_TRANSLATION_LENGTH=100
MAX_REQUESTS_PER_MINUTE=50
USE_ROMANIZATION_FALLBACK=true

# Command Cooldowns (in seconds)
COOLDOWN_DEFAULT=3
COOLDOWN_TRANSLATION=5
COOLDOWN_BATCH_OPERATIONS=30

# Feature Flags
FEATURE_AUTO_TRANSLATION=true
FEATURE_MODERATION=true
FEATURE_FUN_COMMANDS=true

# Database Settings (for future use)
DB_TYPE=sqlite
DB_PATH=data/bot.db

# Logging Settings
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=logs/bot.log